    .syncable_info
      %span 
      = link_to "my Linkedin Profile", @linkedin_profile.url, :target => "_blank"
    - if can?(:sync_profile, @profile)
      = button_group do
        - if @linkedin_profile
          = loop_button_link_to "refresh", new_profile_linkedin_profile_path(@profile)
          = remove_button_link_to "delete", [@profile, @linkedin_profile], :id=> :delete_linkedin, :confirm => 'Are you sure?', :method => :delete
  .clear
        
