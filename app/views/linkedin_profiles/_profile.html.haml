.info_box
  .info_logo
    = link_to image_tag("linkedin_info_logo.png"), "http://www.linkedin.com"
    -if can?(:sync_profile, @profile) && @linkedin_profile
      .delete
        = link_to "delete", [@profile, @linkedin_profile], :id=> :delete_linkedin, :confirm => 'Are you sure?', :method => :delete
  .info
    - if @linkedin_profile
      = link_to "Go to my LinkedIn Profile", @linkedin_profile.url

      %table
        %tr
          %td Last synced on
          %td= show_date @linkedin_profile.last_synced
      = link_to "Resync", new_profile_linkedin_profile_path(@profile)
    
    - else
      - if can? :sync_profile, @profile
        %p 
          = link_to "Sync your LinkedIn profile", new_profile_linkedin_profile_path(@profile)
.clear

