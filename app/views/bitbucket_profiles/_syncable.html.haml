.syncable_logo= link_to image_tag("syncable/bitbucket_logo.png"), "http://www.bitbucket.org"
- @bitbucket_profile = @profile.bitbucket_profile || BitbucketProfile.new
.edit_form
  = form_for [@profile, @bitbucket_profile] do |f|
    = f.text_field :username
    = big_positive_loop_button_tag "Sync"

- if @profile.bitbucket_profile
  .delete_button
    = big_negative_remove_button_link_to "delete", [@profile, @bitbucket_profile], :id=> :delete_bitbucket, :confirm => 'Are you sure?', :method => :delete
.clear