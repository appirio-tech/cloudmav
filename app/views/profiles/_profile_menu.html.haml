#profile_menu.grid_16
  %ul
    %li{:class => (@tab == "summary") ? "selected" : ""}
      - if @tab == "summary"
        = image_tag "tabs/summary_selected.png"
      - else
        = image_tag "tabs/summary_unselected.png"
      = link_to "Summary", profile_path(@profile)
    %li{:class => (@tab == "experience") ? "selected" : ""}
      - if @tab == "experience"
        = image_tag "tabs/experience_selected.png"
      - else
        = image_tag "tabs/experience_unselected.png"
      = link_to "Experience", profile_experience_path(@profile)
    %li{:class => (@tab == "code") ? "selected" : ""}
      - if @tab == "code"
        = image_tag "tabs/code_selected.png"
      - else
        = image_tag "tabs/code_unselected.png"
      = link_to "Code", profile_code_path(@profile)
    %li{:class => (@tab == "writing") ? "selected" : ""}
      - if @tab == "writing"
        = image_tag "tabs/writing_selected.png"
      - else
        = image_tag "tabs/writing_unselected.png"
      = link_to "Writing", profile_writing_path(@profile)
    %li{:class => (@tab == "speaking") ? "selected" : ""}
      - if @tab == "speaking"
        = image_tag "tabs/speaking_selected.png"
      - else
        = image_tag "tabs/speaking_unselected.png"

      = link_to "Speaking", profile_speaking_path(@profile)
.clear
