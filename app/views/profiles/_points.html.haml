
%ul#points
  %li.selected
    .points= @profile.total_score
    .description points
  %li
    .points= @profile.score(:knowledge_points)
    .description knowledge
  %li
    .points= @profile.score(:coder_points)
    .description code
  %li
    .points= @profile.score(:writer_points)
    .description writing
  %li
    .points= @profile.score(:speaker_points)
    .description speaking
  %li
    .points= @profile.score(:social_points)
    .description social
  - unless @profile.stack_overflow_profile.nil?
    %li{:style => "width: 80px"}
      .image= image_tag "stack_overflow_points_icon.png"
      .points= pointify @profile.stack_overflow_profile.reputation
      .description rep
