#profile
	= render :partial => "header"
	
	= render :partial => "profile_menu"
	
	.grid_16
		%table
			%tr
				%td
					.count= @profile.talks.count
					.count_of= @profile.talks.count > 1 ? "talks" : "talks"
				%td{:style =>"padding-left:30px;"}
					.count= @profile.presentations.count
					.count_of= @profile.presentations.count > 1 ? "presentations" : "presentations"
	.clear

	.grid_16
		- unless @profile.speaker_bio.nil?
			%p= @profile.speaker_bio
		= link_to "Set your speaker bio", edit_speaker_bio_path(:username => @profile.username)

	.grid_10
		%h2.page_title 
			.title Talks
			- if can? :add_talk, @profile
				.link= link_to "add a talk", new_talk_path(:username => @profile.username)
		%ul.list
			- @profile.talks.each do |t|		
				%li
					- unless t.slides_thumbnail.nil?
						.item_pic= image_tag t.slides_thumbnail
					.item_title= link_to t.title, t
					- if t.presentations.any?
						%p= "Presented #{pluralize t.presentations.count, 'time', 'times' }"
	.grid_4
		%br
		= render :partial => "shared/profile/speaker_rate"
		= render :partial => "shared/profile/slide_share"
	.clear