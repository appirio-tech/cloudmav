#profile_header
  .right
    - if can? :tweet, @profile
      = render :partial => "profiles/tweet_profile"
    = render :partial => "profiles/evernote"
  .grid_2
    = image_tag @profile.gravatar_url(:size => 110), :id => :profile_pic
  .grid_12
    %h1
      = @profile.display_name
      %span.user_name= @profile.username
      - if can? :edit, @profile
        %span.edit_profile= edit_button_link_to "edit profile", edit_profile_path(@profile)            
    .clear    
    %table
      %tr
        %td.location_image= image_tag "location_pin.png"
        %td.location_text= @profile.location_text
    .clear
    = render :partial => "profiles/points"
  .grid_2
    %div{:id => "follow_#{@profile.id}"}
      = render :partial => "shared/following", :locals => { :profile => @profile }
  .clear
.clear