- if @stack_overflow_profile || can?(:sync_profile, @profile)
  #stack_overflow_info
    .syncable_logo= link_to image_tag("syncable/stack_overflow_logo.png"), "http://www.stackoverflow.com"
    .syncable_info
      %span StackOverflow id 
      = link_to @stack_overflow_profile.stack_overflow_id, @stack_overflow_profile.url, :target => "_blank"
    - if can?(:sync_profile, @profile)    
      = button_group do
        - if @stack_overflow_profile
          = loop_button_link_to "refresh", "/"
          = edit_button_link_to "edit", "/"
          = remove_button_link_to "delete", [@profile, @stack_overflow_profile], :id=> :delete_stack_overflow, :confirm => 'Are you sure?', :method => :delete
    
  .clear
  
