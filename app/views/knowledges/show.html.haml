= content_for :title do
  #{@profile.display_name} - Knowledge

#profile
  = render :partial => "profiles/profile_side_bar"
  
  .grid_13
    %h1 #{@profile.display_name} -> Knowledge
    
    - if can?(:sync_profile, @profile)
      %ul#profile_actions
        %li= big_edit_button_link_to "Edit your Knowledge Profile", edit_profile_knowledge_path(@profile)    
    
    %ul#important_stats
      - if @stack_overflow_profile
        %li 
          #{@stack_overflow_profile.reputation}
          = image_tag "syncable/mini_stack_overflow_logo.png"
      %li.points #{@profile.score(:speaker_points)} knowledge points 

    - unless @stack_overflow_profile.answers.empty?
      %section#stack_overflow_answers
        %h2 Top 3 Stack Overflow Answers
        %ul
          - @stack_overflow_profile.answers.each do |a|
            %li
              = link_to a.title, a.url, :target => "_blank"
                      
    - unless @stack_overflow_profile.questions.empty?
      %section#stack_overflow_questions
        %h2 Top 3 Stack Overflow Questions
        %ul
          - @stack_overflow_profile.questions.each do |q|
            %li
              = link_to q.title, q.url, :target => "_blank"
    
    - if @stack_overflow_profile
      = render :partial => "shared/tags", :locals => {:taggable => @profile.knowledge_profile}
    
      &nbsp;    

    .clear    
