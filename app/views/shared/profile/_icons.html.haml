#profile_icons
	.icon
		.image= image_tag "icons/codemav_icon.png"
		.score
			= @profile.total_score
			.description points
	- unless @profile.stack_overflow_profile.nil?
		.icon
			.image= image_tag "stack_overflow_icon.png"
			.score
				= @profile.stack_overflow_profile.reputation
				.description reputation
	- unless @profile.git_hub_profile.nil?
		.icon
			.image= image_tag "icons/git_hub_icon.png"
			.score
				= @profile.git_hub_profile.followers_count
				.description followers