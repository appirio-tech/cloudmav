#event_feed
  .filter
    %ul
      %li Filter : 
      %li.active
        = link_to "All", profile_events_path(@profile.username, :filter => "All"), :remote => true 
      %li
        = link_to "Experience", profile_events_path(@profile.username, :filter => "Experience"), :remote => true 
      %li
        = link_to "Code", profile_events_path(@profile.username, :filter => "Code"), :remote => true 
      %li
        = link_to "Writing", profile_events_path(@profile.username, :filter => "Writing"), :remote => true 
      %li
        = link_to "Speaking", profile_events_path(@profile.username, :filter => "Speaking"), :remote => true 
      %li
        = link_to "Social", profile_events_path(@profile.username, :filter => "Social"), :remote => true 

  %ul.list#events
    = render :partial => "events/event", :collection => events, :as => :event
    %li.event_load &nbsp; 
    %li.more_events
        = form_tag profile_events_path(@profile.username), :remote => true, :method => :get do |f|
          = hidden_field_tag :filter, "All"
          = hidden_field_tag :page, 2
          = submit_tag "Click to load more", :id => "more_events"
