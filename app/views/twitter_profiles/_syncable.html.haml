.syncable_logo= link_to image_tag("syncable/twitter_logo.png"), "http://www.twitter.com"
- @twitter_profile = @profile.twitter_profile || TwitterProfile.new
.edit_form
  = form_for [@profile, @twitter_profile] do |f|
    = f.text_field :username
    = big_positive_loop_button_tag "Sync"

- if @profile.twitter_profile
  .delete_button
    = big_negative_remove_button_link_to "delete", [@profile, @twitter_profile], :id=> :delete_twitter, :confirm => 'Are you sure?', :method => :delete
.clear

