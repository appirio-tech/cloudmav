%html
%head
	%title Codemav
	= stylesheet_link_tag "reset"
	= stylesheet_link_tag "960"
	= stylesheet_link_tag "codemav"
	= stylesheet_link_tag "tabs"

	= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false"
	= javascript_include_tag "jquery-1.4.2.min"
	= javascript_include_tag "jquery-ui-1.8.5.custom.min"
	= javascript_include_tag "jquery.auto-geocoder"
	= javascript_include_tag "rails"
	= javascript_include_tag "jquery-calendrical-0.1/jquery.calendrical.js"
	= javascript_include_tag "tabs.js"
	= javascript_include_tag "highcharts.js"
	= stylesheet_link_tag "calendrical.css"
	= stylesheet_link_tag "flick/jquery-ui-1.8.6.custom"

	= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Cuprum&subset=latin"
	= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Droid+Sans&subset=latin"
	= csrf_meta_tag
	
	= render :partial => "shared/get_satisfaction"
%body
	#header
		.container_16
			.grid_16
				= link_to image_tag("main_code_mav_logo.png"), root_path
				= render :partial => "shared/login_info"
				= render :partial => "shared/guidance"
			.clear
		.clear
	.clear
	
	#subheader
		.container_16
			.grid_16
				= render :partial => "shared/menu"
			.clear
	.clear
		
	#content
		.container_16
			= flashy
			= yield
		.clear
	.clear
	
	#footer
		.container_16
			= render :partial => "shared/footer"
		.clear
	.clear
