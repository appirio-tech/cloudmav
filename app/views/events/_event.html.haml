%li{"data-type" => "event", :style => "display:none" }
  .item_pic= image_tag event.icon_url
  .item_info
    .item_title
      - if event.profile
        - if event.profile == current_profile
          You 
        -else
          #{event.profile.display_name} 
      - if event.url?
        = link_to event.description, event.url
      -else
        = event.description
    .item_description= show_date event.date
