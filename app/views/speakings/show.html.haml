= content_for :title do
  #{@profile.display_name} - Speaking

#profile
  = render :partial => "profiles/profile_side_bar"
  
  .grid_13
    .total_score
      = @profile.score(:speaker_points)
      
    %h1 #{@profile.display_name} -> Speaking
      
    - if can?(:sync_profile, @profile)
      %ul#profile_actions
        %li= big_edit_button_link_to "Edit your Speaker Profile", edit_profile_speaking_path(@profile)
        
    %ul#important_stats
      %li #{@profile.talks.count} talks
      - if @profile.speaker_rate_profile
        %li 
          #{@profile.speaker_rate_profile.rating}
          = image_tag "syncable/mini_speaker_rate_logo.png"
      %li.points #{@profile.score(:speaker_points)} speaker points
    
    #talks
      %h2 Talks
      - if can? :add_talk, @profile
        .link= big_add_primary_button_link_to "add a talk", new_profile_talk_path(@profile)
      %ul
        - @profile.talks.each do |talk|    
          %li
            .preview_pic= image_tag talk.preview_pic
            .talk_info
              .talk_title= link_to talk.title, [@profile, talk]
              .talk_description= truncate(talk.description, :length => 140)
              //= render :partial => "shared/simple_tags", :locals => { :taggable => talk }

            .clear
    &nbsp;    
    
  .clear

