.syncable_logo= link_to image_tag("syncable/slide_share_logo.png"), "http://www.slideshare.net"
- @slide_share_profile = @profile.slide_share_profile || SlideShareProfile.new
.edit_form
  = form_for [@profile, @slide_share_profile] do |f|
    = f.text_field :slide_share_username
    = big_positive_loop_button_tag "Sync"

- if @profile.slide_share_profile
  .delete_button
    = big_negative_remove_button_link_to "delete", [@profile, @slide_share_profile], :id=> :delete_slide_share, :confirm => 'Are you sure?', :method => :delete

.clear