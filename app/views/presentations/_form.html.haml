= form_for [@talk, @presentation] do |f|
  .label= f.label "When are you giving the presentation?"
  .control
    = text_field_tag :presentation_date_string
    = text_field_tag :presentation_time_string
  .label= f.label :audience, "Who are you giving the presentation to?"
  .control= f.text_field :audience
  .label=f.label :url, "Do you have a url for the presentation for more information?"
  .control= f.text_field :url
  .label= f.label :video_url, "If you have a link to a video recording of the presentation, please enter your link below"
  .control= f.text_field :video_url
  .submit= f.submit "Schedule Presentation", :disable_with => "Scheduling..."
    
:javascript
  $(function() {
    $("#presentation_date").calendricalDate();
    $("#presentation_time").calendricalTime();
  });
